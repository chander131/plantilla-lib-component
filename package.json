{
  "name": "plantilla-lib-component",
  "version": "1.0.6",
  "description": "Librería de componentes para React creados con Typescript",
  "author": "Daniel Elías",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/chander131/plantilla-lib-component"
  },
  "scripts": {
    "build": "npx tsc -p .",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "lint": "tslint --project \"./tsconfig.json\"",
    "storybook": "start-storybook -p 6006 -c .storybook watch-css -s ./src",
    "build-storybook": "build-storybook",
    "docs": "typedoc --out docs src",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha test/**/*.ts",
    "ci": "npm run lint && npm run build && npm run cover",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run ci",
    "preversion": "npm run ci"
  },
  "keywords": [
    "components",
    "npm"
  ],
  "license": "ISC",
  "dependencies": {
    "@types/react": "^17.0.27",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/react": "^6.3.10",
    "@types/chai": "^4.2.22",
    "@types/istanbul": "^0.4.30",
    "@types/mocha": "^9.0.0",
    "@types/styled-components": "^5.1.15",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "gh-pages": "^3.2.3",
    "istanbul": "^0.4.5",
    "mocha": "^9.1.2",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.5"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  }
}